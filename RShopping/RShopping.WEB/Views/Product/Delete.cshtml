@model ProductModel

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Delete Product</h1>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div asp-validation-summary="All" class="text-danger">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" disabled />
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>

            <div class="col">
                <label asp-for="Categoryname" class="control-label">Category name</label>
                <input asp-for="Categoryname" class="form-control" disabled />
                @*<span asp-validation-for="Categoryname" class="text-danger"></span>*@
            </div>

            <div class="col">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" disabled />
                @*<span asp-validation-for="Price" class="text-danger"></span>*@
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" disabled />
                @*<span asp-validation-for="Description" class="text-danger"></span>*@
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label asp-for="ImageURL" class="control-label">ImageURL</label>
                <input asp-for="ImageURL" class="form-control" disabled />
                @*<span asp-validation-for="ImageURL" class="text-danger"></span>*@
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                <a asp-action="Index" class="btn btn-info">Back to list</a>
            </div>
            <div class="col-6">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>

    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}